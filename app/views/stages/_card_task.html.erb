<div class="card card-task d-block border-light shadow-sm mt-4">
    <div class="card-body p-3">
        <div>
            <div class="badge <%= card_task.tag.type_tag %>">
                <%= card_task.tag.type_tag %>
            </div>
            <small class="float-end text-muted"><%= card_task.deadline.to_fs(:month_day_comma_year) %></small>
        </div>
        <%= link_to project_stage_task_path(project_id: card_task.project_id, stage_id: card_task.stage_id, id: card_task.id) do %>
            <h6 class="text-decoration-none py-2">
                <%= card_task.name %>
            </h6>
        <% end %>
        <div class="text-muted font-13 my-3">
            <%= truncate(strip_tags(card_task.description.to_s), length: 50) %>
        </div>
        <div class="d-flex justify-content-between align-items-center">
            <p class="mb-0">
                <%= image_tag card_task.user.avatar, style:"width:28px", class: "me-1" %>
                <span class="align-middle"><%= card_task.user.name %></span>
            </p>
            <div>
                <a href="#" class="dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-three-dots-vertical"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-end">
                    <a href=<%= edit_project_stage_task_path(project_id: card_task.project_id, stage_id: card_task.stage_id, id: card_task.id) %> class="dropdown-item font-14 text">
                        <i class="bi bi-pencil me-2 icon-12"></i>
                        Edit
                    </a>
                    <%= link_to project_stage_task_path(project_id: card_task.project_id, stage_id: card_task.stage_id, id: card_task.id), data: { "turbo-method": :delete }, class:"dropdown-item font-14 text" do %>
                        <i class="bi bi-trash me-2 icon-12"></i>
                        Delete
                    <% end %>
                </div>
            </div>
        </div>
    </div> <!-- end card-body -->
    
</div>