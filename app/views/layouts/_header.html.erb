<div class="d-flex justify-content-between header px-2 py-3">
    <%# <a href="#sidebar" data-bs-toggle="collapse" class="px-0 align-middle">
        <i class="bi bi-list"></i>
    </a> %>
    <div class="input-group w-25">
        <% if params[:project_id].nil? %>
            <%= form_tag projects_path, method: :get, class: "d-flex" do %>
                <%= text_field_tag :search_value, params[:search_value], class:"form-control rounded-0 rounded-start", placeholder: "Search Projects..." %>
                <%= submit_tag "Search", class: "btn button-search text-light rounded-0 rounded-end" %>
            <% end %>
        <% else %>
            <%= form_tag project_stages_path, method: :get, class: "d-flex" do %>
                <%= text_field_tag :search_value, params[:search_value], class:"form-control rounded-0 rounded-start", placeholder: "Search Tasks..." %>
                <%= submit_tag "Search", class: "btn button-search text-light rounded-0 rounded-end" %>
            <% end %>
        <% end %>
    </div>
    <div class="d-flex justify-content-between align-items-center">
        <%# <a class="nav-link" href="#">
            <i class="bi bi-moon-stars"></i>
        </a> %>
        <% if current_user.nil?.! %>
            <div class="dropdown">
                <a class="nav-link dropdown-toggle arrow-none nav-user px-2 show" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="true">
                    <span class="account-user-avatar">
                        <%= image_tag current_user.avatar.nil? ? "/assets/avatar_default.png" : current_user.avatar , style:"width:36px" %>
                    </span>
                </a>
                <div class="dropdown-menu dropdown-menu-end dropdown-menu-animated profile-dropdown" style="position: absolute; inset: 0px 0px auto auto; margin: 0px; transform: translate(0px, 72px);" data-popper-placement="bottom-end">
                    <!-- item-->
                    <div class="dropdown-header noti-title">
                        <h6 class="text-overflow m-0">Welcome !</h6>
                    </div>

                    <!-- item-->
                    <%# <a href="#" class="dropdown-item">
                        <i class="bi bi-person-circle me-2"></i>
                        <span>My Account</span>
                    </a> %>

                    <!-- item-->
                    <a href=<%= logout_path %> class="dropdown-item">
                        <i class="bi bi-box-arrow-right me-2"></i>
                        <span>Logout</span>
                    </a>
                </div>
            </div>
        <% end %>
    </div>
    
</div>